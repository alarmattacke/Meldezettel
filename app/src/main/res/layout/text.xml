<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/second_activity"
    android:id="@+id/text" >


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_back"
        android:src="@drawable/back"
        android:layout_alignWithParentIfMissing="false"
        android:clickable="true"
        android:background="#ffd9dcde"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Spinner
        android:id="@+id/site_spinner"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:entries="@array/site"
        android:prompt="@string/choose_site"
        android:layout_marginTop="45dp"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/btn_back"
        android:layout_centerHorizontal="true"
        android:background="@android:drawable/btn_dropdown"/>


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/first"
        android:src="@drawable/repk"
        android:background="#ffdde0e1"
        android:layout_alignTop="@+id/btn_back"
        android:layout_toLeftOf="@+id/dynamic"
        android:layout_toStartOf="@+id/dynamic"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dynamic"
        android:background="#ffd9dcde"
        android:src="@drawable/repk"
        android:layout_alignTop="@+id/first"
        android:layout_toLeftOf="@+id/btn_next"
        android:layout_toStartOf="@+id/btn_next"
        android:layout_marginRight="89dp"
        android:layout_marginEnd="89dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_below="@+id/site_spinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp"
        android:src="@drawable/location_k" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_marginTop="44dp"
        android:src="@drawable/edit_k"
        android:layout_below="@+id/imageView"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/txt_summary"
        android:layout_alignRight="@+id/site_spinner"
        android:layout_alignEnd="@+id/site_spinner"
        android:layout_alignTop="@+id/imageView2"
        android:layout_toRightOf="@+id/btn_back"
        android:layout_toEndOf="@+id/btn_back"
        android:hint="@string/Bemerkung"
        android:textColorHint="#ffa2a2a2"
        android:textColor="#ff000000" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_location"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignLeft="@+id/txt_summary"
        android:layout_alignStart="@+id/txt_summary"
        android:layout_alignRight="@+id/site_spinner"
        android:layout_alignEnd="@+id/site_spinner"
        android:hint="@string/location"
        android:autoText="true"
        android:textColor="#ff000000"
        android:inputType="text"
        android:textColorHint="#ffa2a2a2" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_next"
        android:src="@drawable/next"
        android:layout_alignWithParentIfMissing="false"
        android:clickable="true"
        android:background="#ffd9dcde"
        android:layout_above="@+id/site_spinner"
        android:layout_alignRight="@+id/site_spinner"
        android:layout_alignEnd="@+id/site_spinner" />

</RelativeLayout>