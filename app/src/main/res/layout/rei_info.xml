<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/second_activity"
    android:id="@+id/rei">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:layout_marginTop="67dp"
        android:src="@drawable/reik_boden"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/infoBoden"
        android:id="@+id/infoBoden"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:textColor="#ff000000" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:src="@drawable/reik_tuer"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/imageView3"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_alignStart="@+id/imageView3" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView8"
        android:src="@drawable/reik_spezail"
        android:layout_below="@+id/imageView4"
        android:layout_alignLeft="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4"
        android:layout_marginTop="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/infoGlas"
        android:id="@+id/infoGlas"
        android:textColor="#ff000000"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_alignLeft="@+id/infoBoden"
        android:layout_alignStart="@+id/infoBoden" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView9"
        android:src="@drawable/reik_hoch"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/imageView8"
        android:layout_alignLeft="@+id/imageView8"
        android:layout_alignStart="@+id/imageView8" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView10"
        android:src="@drawable/repk_verschlossen"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/imageView9"
        android:layout_alignLeft="@+id/imageView9"
        android:layout_alignStart="@+id/imageView9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/infoSpezial"
        android:id="@+id/infoSpezial"
        android:textColor="#ff000000"
        android:layout_above="@+id/imageView9"
        android:layout_alignLeft="@+id/infoGlas"
        android:layout_alignStart="@+id/infoGlas" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/infoHoch"
        android:id="@+id/infoHoch"
        android:textColor="#ff000000"
        android:layout_alignBottom="@+id/imageView9"
        android:layout_alignLeft="@+id/infoSpezial"
        android:layout_alignStart="@+id/infoSpezial" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/infoVerschlossen"
        android:id="@+id/infoVerschlossen"
        android:textColor="#ff000000"
        android:layout_alignBottom="@+id/imageView10"
        android:layout_alignLeft="@+id/infoHoch"
        android:layout_alignStart="@+id/infoHoch" />
</RelativeLayout>
