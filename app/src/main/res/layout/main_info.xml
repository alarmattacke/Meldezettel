<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/second_activity_v2"
    android:id="@+id/rei">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="360dp"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp"
        android:layout_height="60dp"
        tools:ignore="MissingConstraints"
        tools:targetApi="lollipop" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@drawable/repk"
        android:layout_marginStart="72dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="88dp"
        app:layout_constraintTop_toBottomOf="@+id/my_toolbar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/infoReparatur"
        android:id="@+id/infoReparatur"
        android:textColor="#ff000000"
        android:layout_marginTop="96dp"
        app:layout_constraintTop_toBottomOf="@+id/my_toolbar"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView3"
        android:layout_marginLeft="32dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:src="@drawable/reinigung_klein"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        android:layout_marginStart="72dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="72dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/infoReinigung"
        android:id="@+id/infoReinigung"
        android:textColor="#ff000000"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toBottomOf="@+id/infoReparatur"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView4"
        android:layout_marginLeft="32dp" />
</android.support.constraint.ConstraintLayout>
